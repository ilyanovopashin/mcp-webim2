{
  "version": 2,
  "functions": {
    "api/**/*.py": {
      "maxDuration": 60,
      "memory": 1024,
      "runtime": "python3.11"
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/api/index" },
    { "source": "/mcp", "destination": "/api/index" },
    { "source": "/mcp/(.*)", "destination": "/api/index" }
  ]
}
